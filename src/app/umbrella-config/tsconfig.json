{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "outDir": "dist",
    "inlineSources": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["es2015", "dom"],
    "stripInternal": true,
    "strictNullChecks": true
  },
  "files": [
    "./index.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  }
}
